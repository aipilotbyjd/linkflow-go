# Kong Environment Variables for Production
# Copy this file to kong.env and update with your actual values

# JWT Secrets for Different Tiers
JWT_SECRET_FREE=your-free-tier-jwt-secret-here
JWT_SECRET_PRO=your-pro-tier-jwt-secret-here
JWT_SECRET_ENTERPRISE=your-enterprise-jwt-secret-here

# RSA Keys for Enterprise (generate with: openssl genrsa -out private.pem 2048)
RSA_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
your-rsa-public-key-here
-----END PUBLIC KEY-----

# API Keys for Service Accounts
INTERNAL_API_KEY=internal-service-api-key-here
PROMETHEUS_API_KEY=prometheus-monitoring-api-key-here
WEBHOOK_API_KEY=webhook-service-api-key-here

# Allowed CORS Origins (comma-separated)
CORS_ORIGINS=https://app.linkflow.io,https://linkflow.io

# Rate Limiting Settings
RATE_LIMIT_FREE_MINUTE=60
RATE_LIMIT_FREE_HOUR=1000
RATE_LIMIT_PRO_MINUTE=300
RATE_LIMIT_PRO_HOUR=10000
RATE_LIMIT_ENTERPRISE_MINUTE=1000
RATE_LIMIT_ENTERPRISE_HOUR=100000

# Database Connection (if using Kong with PostgreSQL)
KONG_DATABASE=postgres
KONG_PG_HOST=postgres
KONG_PG_PORT=5432
KONG_PG_DATABASE=kong
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong123

# Redis for caching (optional)
KONG_REDIS_HOST=redis
KONG_REDIS_PORT=6379

# Logging Configuration
LOG_ENDPOINT=http://logging-service:8080/logs
LOG_LEVEL=info

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/kong/certs/linkflow.crt
SSL_KEY_PATH=/etc/kong/certs/linkflow.key

# Kong Admin Configuration
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_ADMIN_SSL_CERT=/etc/kong/certs/admin.crt
KONG_ADMIN_SSL_KEY=/etc/kong/certs/admin.key
